<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    tools:context=".ForgotPassword.ForgotPassword">

    <ImageView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:src="@drawable/logo_new"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/garet_black"
            android:text="Forgot Password"
            android:textSize="@dimen/_15ssp"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/garet_normal"
            android:textAlignment="center"
            android:text="Provide your accounts email for which you want to reset your password!"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:hint="Email"
            app:hintTextColor="#2E2E2E"
            android:textColorHint="#2E2E2E"
            app:startIconDrawable="@drawable/baseline_email_24"
            android:layout_width="match_parent"
            app:endIconMode="clear_text"
            app:boxStrokeColor="@color/blue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconTint="@color/blue"
            app:endIconTint="@color/blue"
            app:boxBackgroundMode="outline"
            android:layout_height="@dimen/_42sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garet_normal"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetBtn"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/garet_black"
            android:text="Reset Password"
            app:iconGravity="textStart"
            android:textColor="@color/white"
            android:backgroundTint="#D34354"
            app:icon="@drawable/baseline_settings_backup_restore_24"
            android:textSize="@dimen/_10ssp"
            app:cornerRadius="@dimen/_5sdp"
            app:strokeColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_width="match_parent"
            app:iconGravity="textStart"
            android:layout_height="@dimen/_45sdp"
            android:fontFamily="@font/garet_black"
            android:text="Back"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_arrow_back_24"
            android:textSize="@dimen/_10ssp"
            app:cornerRadius="@dimen/_5sdp"
            app:strokeColor="@color/white" />

    </LinearLayout>

</LinearLayout>