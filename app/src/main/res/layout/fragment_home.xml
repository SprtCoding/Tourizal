<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context=".AdminMenu.HomeFragment">

    <ImageView
        android:id="@+id/header_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/logo_new"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:layout_below="@id/header_logo"
        android:layout_marginTop="-55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Explore the beauty of Rizal"
        android:textSize="@dimen/_10ssp"
        android:letterSpacing=".2"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        android:layout_marginBottom="25dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/featuredPostCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/resort_featured"
                    android:contentDescription="@string/app_name"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Featured Post"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing=".1"
                        android:textColor="@color/light_blue"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your featured post shows here"
                        android:fontFamily="@font/poppins"
                        android:letterSpacing=".1"
                        android:textColor="@color/light_blue"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/viewFeatured"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing=".1"
                        android:drawableStart="@drawable/eye_18"
                        android:drawableTint="@color/light_blue"
                        android:textColor="@color/light_blue"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/resortPostCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/resort_post"
                    android:contentDescription="@string/app_name"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resort Post"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing=".1"
                        android:textColor="@color/light_blue"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your resort post shows here"
                        android:fontFamily="@font/poppins"
                        android:letterSpacing=".1"
                        android:textColor="@color/light_blue"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/viewResortPostTV"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing=".1"
                        android:drawableStart="@drawable/eye_18"
                        android:drawableTint="@color/light_blue"
                        android:textColor="@color/light_blue"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>