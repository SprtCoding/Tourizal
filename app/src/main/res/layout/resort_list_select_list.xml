<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/resort"
            android:scaleType="fitXY"
            android:id="@+id/resortPhoto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resortName"
                android:text="Resort Name"
                android:fontFamily="@font/garet_black"
                android:letterSpacing=".1"
                android:textAllCaps="true"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/light_blue"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resortOwner"
                android:text="Owned by Name"
                android:fontFamily="@font/garet_normal"
                android:letterSpacing=".1"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/light_blue"/>

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectBtn"
                    android:text="Select"
                    android:fontFamily="@font/garet_black"
                    android:textColor="@color/light_blue"
                    android:letterSpacing=".1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/_11ssp"
                    app:drawableStartCompat="@drawable/baseline_touch_app_24"
                    app:drawableTint="@color/light_blue" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>